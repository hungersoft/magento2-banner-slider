            </settings>
        </column>
        <column name="nav_as_thumbnails">
            <settings>
                <filter>text</filter>
                <label translate="true">nav_as_thumbnails</label>
                <editor>
                    <editorType>text</editorType>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">false</rule>
                    </validation>
                </editor>
            </settings>
        </column>
        <column name="nav_position">
            <settings>
                <filter>text</filter>
                <label translate="true">nav_position</label>
                <editor>
                    <editorType>text</editorType>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">false</rule>
                    </validation>
                </editor>
            </settings>
        </column>
        <column name="autoplay">
            <settings>
                <filter>text</filter>
                <label translate="true">autoplay</label>
                <editor>
                    <editorType>text</editorType>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">false</rule>
                    </validation>
                </editor>
            </settings>
        </column>
        <column name="autoplay_timeout">
            <settings>
                <filter>text</filter>
                <label translate="true">autoplay_timeout</label>
