                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="*/*/save"/>
        </settings>
        <dataProvider class="HS\BannerSlider\Model\Slider\DataProvider" name="slider_form_data_source">
            <settings>
                <requestFieldName>slider_id</requestFieldName>
